extends ../layout

include ../mixins/_loginForm
include ../mixins/_forgotForm

block content
  .mx-auto.container
    div(class="w-2/3 shadow-2xl mx-auto mt-5 rounded overflow-hidden")
      div(class="bg-gray-300 p-3 border-b border-gray-500")
        h1(class="text-2xl font-bold mb-3") #{title}
      .p-3
        +loginForm()
    div(class="w-2/3 shadow-2xl mx-auto mt-6 rounded overflow-hidden")
      div(class="bg-gray-300 p-3 border-b border-gray-500")
        h2.text-xl.font-bold Forgot Password
      .p-3
        +forgotForm()
