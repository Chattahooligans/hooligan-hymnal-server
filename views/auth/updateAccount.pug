extends ../layout

include ../mixins/_baseInput
include ../mixins/_csrfInput

block content
  .container.mx-auto.pt-3
    form(method="POST")
      +csrfInput(csrfToken)
      .flex.flex-col.mb-3
        +baseInput('text', 'First Name', 'name', currentUser.name, 'Your name', true)
      .flex.flex-col.mb-3
        +baseInput('text', 'Last Name', 'familyName', currentUser.familyName, 'Your last name')
      .flex.flex-col.mb-3
        +baseInput('text', 'Display Name', 'displayName', currentUser.displayName, 'Display Name', true)
      .flex.flex-col.mb-3
        +baseInput('email', 'Email', 'email', currentUser.email, true)
      .mb-3
        button(type="submit" class="px-3 py-2 rounded bg-blue-700 text-white") Update
