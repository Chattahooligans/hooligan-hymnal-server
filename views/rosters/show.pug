extends ../layout

block content
  div(class="show--card")
    h2(class="font-semibold text-2xl mb-3") #{title}
    div(class="flex flex-col")
      p Season #{roster.season}
      p Active #{roster.active}
      p Default #{roster.default}
      header(class="flex justify-between")
        h3(class="font-medium") Players #{roster.players.length}
      div
        details(class="border p-3 rounded")
          summary Players
          ul
            each player in roster.players
              li(class="border-t p-3") #{player.hint}
    div(class="show--card__footer")
      a(href=`/rosters/${roster.id}/edit` class="btn btn--edit") Edit
      br
      a(href=`/rosters/${roster.id}/delete` class="btn btn--delete") Delete
