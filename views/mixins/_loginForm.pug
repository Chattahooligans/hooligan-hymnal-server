include ./_baseInput

mixin loginForm()
  form.form(method="POST" action="/login")
    .flex.flex-col.mb-3
      label(for="email" class="flex-1 font-semibold") Email
      input(type="email", name="email", id="email", class="border flex-auto rounded p-2 shadow" placeholder="Email", required="true")
    .flex.flex-col.mb-3
      label(for="password" class="flex-1 font-semibold") Password
      input(type="password", name="password", id="password", class="border flex-auto rounded p-2 shadow" placeholder="password", required="true")
    div
      button(type="submit" class="bg-blue-700 text-white py-2 px-3 rounded") Login
