include ./_baseInput
include ./_csrfInput

mixin registerForm(csrfToken)
  form(method="POST" action="/register")
    +csrfInput(csrfToken)
    .flex.flex-col.mb-3
      +baseInput("text", "First Name", "name", "", "First Name", true)
    .flex.flex-col.mb-3
      +baseInput("text", "Last Name", "familyName", "", "Last Name", true)
    .flex.flex-col.mb-3
      +baseInput("email", "Email", "email", "", "email@email.com", true)
    .flex.flex-col.mb-3
      +baseInput("text", "Display Name", "displayName", "", "Display Name", true)
    .flex.flex-col.mb-3
      +baseInput("password", "Password", "password", "", "*******", true)
    .flex.flex-col.mb-3
      +baseInput("password", "Confirm Password", "passwordConfirm", "", "Confirm ******", true)
    .mb-3
      button(type="submit" class="px-3 py-2 bg-blue-600 text-white rounded") Register
